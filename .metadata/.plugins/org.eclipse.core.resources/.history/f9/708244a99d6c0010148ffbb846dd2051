package in.cfn.main;

import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;

import in.cfn.main.beans.Student;

@SpringBootApplication
public class SprongbootProject4Application implements CommandLineRunner {

	public static void main(String[] args) {
		SpringApplication.run(SprongbootProject4Application.class, args);
	}

	@Override
	public void run(String... args) throws Exception {
		stdBean1().displayStdDetails();
		stdBean2().displayStdDetails();
	}
	
	@Bean
	public Student stdBean1() {
		return new Student("karan", 101, 98.3f);
	}
	
	@Bean
	public Student stdBean2() {
		return new Student("arjun", 102, 94.5f);
	}

}
