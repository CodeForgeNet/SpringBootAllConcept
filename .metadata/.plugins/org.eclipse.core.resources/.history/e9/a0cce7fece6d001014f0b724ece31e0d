package in.cfn.main;

import org.hibernate.Session;
import org.hibernate.SessionFactory;
import org.hibernate.Transaction;
import org.hibernate.cfg.Configuration;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import in.cfn.main.entities.User;

// This project is not good way to do. watch its 2nd part.


@SpringBootApplication
public class SpringbootWithHibernate1Application {

	public static void main(String[] args) {
		SpringApplication.run(SpringbootWithHibernate1Application.class, args);

		

		Session session = sessionFactory.openSession();
//		If we GET the values from the db then we don't need transaction. 
//		Transaction transaction = session.beginTransaction() ;

		try {
			User user = session.get(User.class, 3);
			
			if(user!=null) {
				
			System.out.println(user.getName());
			System.out.println(user.getEmail());
			}else {
				System.out.println("USER NOT FOUND");
			}

		} catch (Exception e) {
			e.printStackTrace();
		}

	}

}
