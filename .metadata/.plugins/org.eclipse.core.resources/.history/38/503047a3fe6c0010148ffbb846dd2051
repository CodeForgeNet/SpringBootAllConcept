package in.cfn.main.dao;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Repository;

import in.cfn.main.entity.User;

@Repository
public class UserDao {

	@Autowired
	private JdbcTemplate jdbcTemplate;
//	JdbcTemplate provide method to interact with database.

	public String insertUser(User user) {

		try {
			String INSERT_SQL_QUERY = "INSERT INTO user(name, email, gender, city) VALUES (?,?,?,?)";
			jdbcTemplate.update(INSERT_SQL_QUERY, user.getName(), user.getEmail(), user.getGender(), user.getCity());
		} catch (Exception e) {
			e.printStackTrace();
		}

	}

}
