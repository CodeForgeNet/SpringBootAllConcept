package in.cfn.main.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import in.cfn.main.entities.Student;
import in.cfn.main.repository.StudentRepository;

@Service
public class StudentServiceImpl implements StudentService {

	@Autowired
	private StudentRepository studentRepository;

	
	// INSERT METHOD
	@Override
	public boolean addStudentDetails(Student std) {

		boolean status = false;
		status = true;

		try {

			studentRepository.save(std);

		} catch (Exception e) {
			e.printStackTrace();
			status=false;
		}

		return status;
	}
	
	// GET ALL STUDENT METHOD

	@Override
	public List<Student> getAllStdDetails() {
		
		return studentRepository.findAll();
	}

	
	
	// GET SINGLE STUDENT METHOD
	
	@Override
	public Student getStdDetails(long id) {
		
		Optional<Student> optional = studentRepository.findById(id);
		
		if(optional.isPresent()) {
			return optional.get();
		}else {
			return null;
		}
	}

	@Override
	public boolean updateStdDetails(long id, float marks) {
		// TODO Auto-generated method stub
		return false;
	}

}
